<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <meta charset="utf-8">
  <title><%= title %></title>
  <!-- To add in order to scale the view for mobiles -->
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css"
    integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
  <link rel="stylesheet" href="/stylesheets/style.css">
</head>

<body>


  <nav class="header col-12 navbar navbar-light bg-light m-0">
    <a class="navbar" href="/">
    <img class="mr-3" src="/images/train.png" width="50" height="50" class="logo" alt="icone ticketac">
    Ticketac
    </a>
    <span>
      <p></p>
    </span>
  </nav>


  <div class="container-fluid">

    <div class="row">

      

      <!-- SIGN IN AREA -->
      <div class="col-12 col-md-4 offset-md-2 text-center mt-5">

        <div class="formArea">

          <h4 class="titleForm">Connexion</h4>

          <form action="/users/sign-in" method="POST">
            <div class="form-group">
              
              <input name="email" type="email" class="form-control" aria-describedby="emailHelp"
                placeholder="Email" required>
            </div>
            <div class="form-group">
              
              <input name="password" type="password" class="form-control" placeholder="Mot de passe" required>
            </div>

            <button type="submit" class="btn btn-danger">Confirmer</button>
          </form>

        </div>

      </div>


      
      <!-- SIGN UP AREA -->
      <div class="col-12 col-md-4 text-center mt-5">

        <div class="formArea">
          <h4 class="titleForm">Inscription</h4>

          <form action="/users/sign-up" method="POST">
            <div class="form-group">
              
              <input name="username" type="text" class="form-control" placeholder="Nom d'utilisateur" required>
            </div>
            <div class="form-group">
              
              <input name="email" type="email" class="form-control" aria-describedby="emailHelp" placeholder="Email" required>
            </div>
            <div class="form-group">
              
              <input name="password" type="password" class="form-control" placeholder="Mot de passe" required>
            </div>

            <button type="submit" class="btn btn-danger">Confirmer</button>
          </form>
        </div>

      </div>




    </div>
  </div>



  <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
    integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
    crossorigin="anonymous"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"
    integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49"
    crossorigin="anonymous"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"
    integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy"
    crossorigin="anonymous"></script>

    <% if (useralreadyExist) { %>
      <script type="text/javascript">
       window.alert("An account with this username or this email already exists. Please try to change one of those.")
       </script>
     <% } %> 
     <% if (wrongpassword) { %>
      <script type="text/javascript">
       window.alert("The password you entered is wrong, or you mispelled your email. Please retry.")
       </script>
     <% } %> 
     <% if (userdontexist) { %>
      <script type="text/javascript">
       window.alert("Cet email n'existe pas dans notre base de donn√©e. Inscrivez-vous pour utiliser Ticketac.")
       </script>
     <% } %> 
</body>

</html>